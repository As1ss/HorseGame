<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutActivity"
    android:orientation="vertical"
    android:background="#035B75">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/premiumTitle"
        android:fontFamily="@font/amaranth_bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/app_color_light"
        android:paddingTop="70dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="25dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/benefit1" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/premiumBenefit1"
            android:fontFamily="@font/amaranth_regular"
            android:textColor="@color/app_color_light"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="25dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/benefit2" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/premiumBenefit2"
            android:fontFamily="@font/amaranth_regular"
            android:textColor="@color/app_color_light"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="25dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/benefit3" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/premiumBenefit3"
            android:fontFamily="@font/amaranth_regular"
            android:textColor="@color/app_color_light"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/payButton"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/previous_cell"
        android:text="@string/pay"
        android:textColor="@color/app_color_dark"
        android:fontFamily="@font/amaranth_regular"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

</LinearLayout>